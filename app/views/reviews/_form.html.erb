<div class="panel panel-default company-ratings">
    <div class="panel-heading">
        <h3 class="panel-title">Your Reviews</h3>
    </div>
    <div class="panel-body disable-user-select">
        <style>
            .animated {
                -webkit-transition: height 0.2s;
                -moz-transition: height 0.2s;
                transition: height 0.2s;
            }

            .stars {
                margin: 20px 0;
                font-size: 24px;
                color: #d17581;
            }

            .form-horizontal .control-label {
                text-align: left !important;
            }
        </style>

        <div class="row" id="post-review-box">
            <div class="col-md-12">
                <!-- Show Errors -->
                <ul ng-show="errors" style="list-style-type: circle;" class="alert alert-warning">
                    <li ng-show="errors.title">
                        <span style="color:red">Title: {{errors.title.toString()}}</span>
                    </li>
                    <li ng-show="errors.comment">
                        <span style="color:red">Comment: {{errors.comment.toString()}}</span>
                    </li>
                    <li ng-show="errors.workspace_rate">
                        <span style="color:red">Workspace rate: {{errors.workspace_rate.toString()}}</span>
                    </li>
                    <li ng-show="errors.salary_rate">
                        <span style="color:red">Salary rate: {{errors.salary_rate.toString()}}</span>
                    </li>
                    <li ng-show="errors.care_rate">
                        <span style="color:red">Care to Staff rate: {{errors.care_rate.toString()}}</span>
                    </li>
                    <li ng-show="errors.care_rate">
                        <span style="color:red">Training & learning rate: {{errors.training_rate.toString()}}</span>
                    </li>
                    <li ng-show="errors.care_rate">
                        <span style="color:red">Culture & fun rate: {{errors.culture_rate.toString()}}</span>
                    </li>
                    <li ng-show="errors.care_rate">
                        <span style="color:red">OT rate: {{errors.ot_rate.toString()}}</span>
                    </li>
                    <li ng-show="errors.summary_rate">
                        <span style="color:red">Summary rate: {{errors.summary_rate.toString()}}</span>
                    </li>
                </ul>
                <div class="alert alert-success" ng-show="success">
                    <strong>Success!</strong>
                </div>

                <form accept-charset="UTF-8" id="review_form" class="form-horizontal" ng-submit="createReview()">
                    <div class="form-group">
                        <label for="title" class="control-label">Title</label>
                        <input type="text" class="form-control" name="title" placeholder="Enter title"
                         ng-value="current_review.title">
                    </div>
                    <div class="form-group">
                        <label for="new-review" class="control-label">Review</label>
                        <textarea class="form-control animated" cols="50" id="new-review" ng-value="current_review.comment" name="comment" placeholder="Enter your review here..."
                            rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <input id="workspace-ratings-hidden" name="workspace_rate" <% if @review %> value="
                        <%= @review.workspace_rate %>"
                            <% end %> ng-model="current_review.workspace_rate" type="hidden">
                                <lable class="control-label col-md-4">Workspace</lable>
                                <div id="workspace_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.workspace_rate %>"
                                        <% end %>></div>
                    </div>
                    <div class="form-group">
                        <input id="salary-ratings-hidden" name="salary_rate" <% if @review %> value="
                        <%= @review.salary_rate %>"
                            <% end %> ng-model="current_review.salary_rate" type="hidden">
                                <lable class="control-label col-md-4">Salary</lable>
                                <div id="salary_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.salary_rate %>"
                                        <% end %>></div>
                    </div>
                    <div class="form-group">
                        <input id="care-ratings-hidden" name="care_rate" <% if @review %> value="
                        <%= @review.care_rate %>"
                            <% end %> ng-model="current_review.care_rate" type="hidden">
                                <lable class="control-label col-md-4">Care to staff</lable>
                                <div id="care_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.care_rate %>"
                                        <% end %>></div>
                    </div>
                    <div class="form-group">
                        <input id="training-ratings-hidden" name="training_rate" <% if @review %> value="
                        <%= @review.training_rate %>"
                            <% end %> ng-model="current_review.training_rate" type="hidden">
                                <lable class="control-label col-md-4">Training & learning</lable>
                                <div id="training_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.training_rate %>"
                                        <% end %>></div>
                    </div>
                    <div class="form-group">
                        <input id="culture-ratings-hidden" name="culture_rate" <% if @review %> value="
                        <%= @review.culture_rate %>"
                            <% end %> ng-model="current_review.culture_rate" type="hidden">
                                <lable class="control-label col-md-4">Culture & fun</lable>
                                <div id="culture_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.culture_rate %>"
                                        <% end %>></div>
                    </div>
                    <div class="form-group">
                        <input id="ot-ratings-hidden" name="ot_rate" <% if @review %> value="
                        <%= @review.ot_rate %>"
                            <% end %> ng-model="current_review.ot_rate" type="hidden">
                                <lable class="control-label col-md-4">OT</lable>
                                <div id="ot_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.ot_rate %>"
                                        <% end %>></div>
                    </div>
                    <div class="form-group">
                        <input id="summary-ratings-hidden" name="summary_rate" <% if @review %> value="
                        <%= @review.summary_rate %>"
                            <% end %> ng-model="current_review.summary_rate" type="hidden">
                                <lable class="control-label col-md-4">Summary</lable>
                                <div id="summary_stars" class="stars starrr col-md-8" <% if @review %> data-rating="
                                    <%= @review.summary_rate %>"
                                        <% end %>></div>
                    </div>
                    <!-- <button class="ibutton ibutton-red" type="submit" >Save</button> -->
                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <button class="btn btn-primary btn-block" type="submit">Save</button>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </form>
                <button ng-show="current_review" class="btn btn-link" ng-click="deleteReview()">Delete</button>
            </div>
        </div>
