<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 well background-white">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email,class:'form-control', autofocus: true ,value:"Your e-mail address",onfocus:"this.value = '';",onblur:"if (this.value == '') {this.value = 'Your e-mail address';}" %>
        </div>

        <div class="actions">
            <%= f.submit "Send me reset password instructions",class:"submit-button" %>
        </div>
        <% end %>

    </div>
    <div class="col-md-3"></div>

</div>
