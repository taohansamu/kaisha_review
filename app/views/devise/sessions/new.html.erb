<div class="login-form">
      <div class="top-login">
        <span><img src="/group.png" alt=""/></span>
      </div>
      <h1>ログイン</h1>
      <div class="login-top">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="login-ic">
        <i class="icon-user"></i>
            
            <%= f.email_field :email,value: 'メール',onfocus:"if (this.value == 'メール') this.value = '';",onblur:"if (this.value == '') {this.value = 'メール';}"%>
            <div class="clear"> </div>
        </div>

        <div class="login-ic">
            <i class="icon"></i>
            <%= f.password_field :password, autocomplete: "off",value:"パスワード" ,onfocus:"
            if (this.value == 'パスワード')this.value = '';", onblur:"if (this.value == '') {this.value = 'パスワード';}" %>
            <div class="clear"> </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %><br>
          <%= render "devise/shared/links" %>
      </div>
      <% end -%>

      <div class="log-bwn">
        <%= f.submit "ログイン",class:'btn btn-primary btnt' %>
    </div>
    <% end %>
    <%- if devise_mapping.omniauthable? %>
    
    <div class="social-login">
      <h3>またはログインと:</h3>
      <div class="social-login-buttons">
          <a class="btn btn-link-1 btn-link-1-facebook" href="/users/auth/facebook">
              <i class="fa fa-facebook"></i> フェイスブック
          </a>
        <a class="btn btn-link-1 btn-link-1-google-plus" href="/users/auth/google_oauth2">
            <i class="fa fa-google"></i>グーグルプラス
        </a>
       </div>
      </div>
    <% end -%>
      
</div>
