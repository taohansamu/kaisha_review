<h1>技能</h1>

<table>
  <thead>
    <tr>
      <th>名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: '本気ですか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

