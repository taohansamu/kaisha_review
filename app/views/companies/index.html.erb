<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Employees</th>
      <th>Website</th>
      <th>Address</th>
      <th>Estabish</th>
      <th>Investment</th>
      <th>Cover</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.employees %></td>
        <td><%= company.website %></td>
        <td><%= company.address %></td>
        <td><%= company.estabish %></td>
        <td><%= company.investment %></td>
        <td><%= company.cover %></td>
        <td><%= company.rank %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

