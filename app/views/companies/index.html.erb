<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>従業員</th>
      <th>ウェブサイト</th>
      <th>住所</th>
      <th>確立する</th>
      <th>投資</th>
      <th>カバー</th>
      <th>ランク</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.employees %></td>
        <td><%= company.website %></td>
        <td><%= company.address %></td>
        <td><%= company.estabish %></td>
        <td><%= company.investment %></td>
        <td><%= company.cover %></td>
        <td><%= company.rank %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: '本当ですか.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

