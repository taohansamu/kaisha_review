<%= form_for(resource, as: resource_name, url: users_update_profile_path(resource_name), class: "form-horizontal", html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username, class: "control-label " %><br />
      <%= f.text_field :username, autofocus: true ,class:"form-control "%>
    </div>
    <div class="form-group">
      <%= f.label :avatar, class: "control-label "%>
      <%= f.file_field :avatar, class: "control-label ",class:"form-control "%>
<!--      <% if @user.avatar? %>
          <%= image_tag @user.avatar.thumb.url %>
      <% end %>-->
    </div>
    <div class="form-group">
      <%= f.label :gender, class: "control-label "%>
      <%= f.radio_button :gender, 'make', :checked => true %>
      <%= label :gender_male, 'Male' %>
      <%= f.radio_button :gender, 'sms' %>
      <%= label :gender_female, 'Female' %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth, class: "control-label "%><br />
      <%= f.date_select :date_of_birth, :start_year=>1900 ,class:"form-control " %>
    </div>
    <div class="form-group">
      <%= f.label :number_phone, class: "control-label " %><br />
      <%= f.text_field :number_phone ,class:"form-control " %>
    </div>
    <div class="form-group">
      <%= f.label :occupation, class: "control-label "%><br />
      <%= f.text_field :occupation ,class:"form-control "%>
    </div>
    <div class="actions">
      <%= f.submit "Update", class:"btn btn-primary btn-block"%>
    </div>
<% end %>